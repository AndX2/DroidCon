<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_card_height">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/half_base_margin_8dp"
        style="@style/PartnerCardView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:weightSum="1"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_item_recycler_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/header_txt_size"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textColor="@android:color/darker_gray"
                    style="@style/TextViewMargin"
                    android:layout_gravity="left|center_vertical"
                    android:text="Title"/>
                <TextView
                    android:id="@+id/tv_item_recycler_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/caption_txt_size"
                    android:layout_gravity="right|center_vertical"
                    android:maxLines="1"
                    style="@style/TextViewMargin"
                    android:textColor="@android:color/darker_gray"
                    android:text="10:24 10.08.2017"/>
            </FrameLayout>
            <ImageView
                android:id="@+id/img_item_recycler_home"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/droid_in_hat"/>

            <TextView
                android:id="@+id/tv_item_recycler_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@android:color/darker_gray"
                style="@style/TextViewMargin"
                android:textSize="@dimen/caption_txt_size"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>