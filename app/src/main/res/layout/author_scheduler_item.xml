<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <com.github.andx2.droidcon.RoundedImageView
        android:id="@+id/rimg_author_avatar"
        android:layout_marginTop="@dimen/half_base_margin_8dp"
        android:layout_marginLeft="@dimen/half_base_margin_8dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/tgr_tmp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_author_name_scheduler_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textStyle="normal"
            android:textSize="@dimen/subheader_txt_size"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="@dimen/half_base_margin_8dp"
            android:layout_marginTop="@dimen/half_base_margin_8dp"
            android:text="Александр Васильев"/>
        <ImageView
            android:id="@+id/img_company_logo_scheduler_item"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:src="@drawable/app4all"/>

    </LinearLayout>

</LinearLayout>